<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"

    android:color="@color/colorAccentBrightRed600">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@color/colorAccentBrightRed600" />
        </shape>
    </item>


    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <corners android:radius="15dp" />

            <gradient
                android:endColor="@color/colorPrimaryDarkBlue900"
                android:startColor="@color/colorPrimaryDarkBlue900"
                android:centerColor="@color/colorPrimaryDarkBlue900"
                android:type="linear" />

        </shape>
    </item>
</ripple>